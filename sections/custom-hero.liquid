{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

<div class="brewster-hero-section">
  <div class="brewster-desktop-image">
    <img src="{{ section.settings.image | img_url: 'master' }}" alt="Brewster Village Marketplace" loading="eager">
  </div>
  <div class="brewster-mobile-image">
    <img src="{{ section.settings.image_mobile | img_url: 'master' }}" alt="Brewster Village Marketplace" loading="eager">
  </div>

  {% if section.settings.show_navbar %}
  <div class="brewster-navbar">
    <div class="brewster-logo">
      BREWSTER VILLAGE
      <div class="brewster-logo-small">MARKETPLACE</div>
    </div>
    <div class="brewster-nav-links">
      <a href="/collections/all">Shop</a>
      <a href="/pages/deli-menu">Deli</a>
      <a href="/pages/about">About</a>
      <a href="/pages/visit-us">Visit Us</a>
      <a href="/pages/contact">Contact</a>
    </div>
  </div>
  {% endif %}

  <div class="brewster-hero-content">
    <h1>Welcome to Brewster<br>Village Marketplace</h1>
    <p>Your Local Spot for Beer, Wine, Deli & More</p>
    <div class="brewster-buttons">
      <a href="{{ section.settings.button_link }}" class="brewster-button">Shop Now</a>
      <a href="{{ section.settings.button_link_2 }}" class="brewster-button">View Deli Menu</a>
    </div>
  </div>
</div>

<style>
  .brewster-hero-section {
    position: relative;
    width: 100%;
    height: 100vh;
    max-height: 100vh;
    overflow: hidden;
    color: #ffffff;
    font-family: Georgia, serif;
  }
  
  .brewster-desktop-image, 
  .brewster-mobile-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  
  .brewster-desktop-image img, 
  .brewster-mobile-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .brewster-mobile-image {
    display: none;
  }
  
  .brewster-navbar {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30px 40px;
    z-index: 10;
  }
  
  .brewster-logo {
    font-size: 18px;
    letter-spacing: 3px;
    line-height: 1.2;
    text-transform: uppercase;
    font-weight: 600;
  }
  
  .brewster-logo-small {
    font-size: 14px;
    letter-spacing: 2px;
    text-align: center;
  }
  
  .brewster-nav-links {
    display: flex;
    gap: 30px;
  }
  
  .brewster-nav-links a {
    color: #ffffff;
    text-decoration: none;
    font-size: 16px;
    transition: opacity 0.2s ease;
  }
  
  .brewster-nav-links a:hover {
    opacity: 0.8;
  }
  
  .brewster-hero-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    width: 90%;
    max-width: 800px;
    z-index: 5;
  }
  
  .brewster-hero-content h1 {
    font-size: 72px;
    font-weight: 400;
    margin-bottom: 30px;
    line-height: 1.1;
  }
  
  .brewster-hero-content p {
    font-size: 28px;
    margin-bottom: 40px;
    font-weight: 300;
  }
  
  .brewster-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
  }
  
  .brewster-button {
    display: inline-block;
    padding: 16px 40px;
    border: 2px solid #ffffff;
    color: #ffffff;
    text-decoration: none;
    font-size: 18px;
    font-weight: 400;
    border-radius: 4px;
    transition: background-color 0.3s ease;
    min-width: 200px;
  }
  
  .brewster-button:hover {
    background-color: rgba(255, 255, 255, 0.2);
  }
  
  @media screen and (max-width: 900px) {
    .brewster-desktop-image {
      display: none;
    }
    
    .brewster-mobile-image {
      display: block;
    }
    
    .brewster-navbar {
      padding: 20px;
    }
    
    .brewster-nav-links {
      display: none;
    }
    
    .brewster-hero-content h1 {
      font-size: 46px;
    }
    
    .brewster-hero-content p {
      font-size: 22px;
    }
    
    .brewster-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .brewster-button {
      width: 80%;
      margin-bottom: 10px;
    }
  }
</style>

{% schema %}
{
  "name": "Brewster Hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Image"
    },
    {
      "type": "checkbox",
      "id": "show_navbar",
      "label": "Show Navigation Bar",
      "default": true
    },
    {
      "type": "url",
      "id": "button_link",
      "default": "/collections/all",
      "label": "Shop Now Button Link"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "default": "/pages/deli-menu",
      "label": "View Deli Menu Button Link"
    }
  ],
  "presets": [
    {
      "name": "Brewster Hero",
      "settings": {
        "button_link": "/collections/all",
        "button_link_2": "/pages/deli-menu",
        "show_navbar": true
      }
    }
  ]
}
{% endschema %} 