{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

<div class="custom-hero-section">
  <div class="custom-hero-container">
    <div class="custom-hero-image desktop-only">
      <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.heading }}" loading="eager">
    </div>
    <div class="custom-hero-image mobile-only">
      <img src="{{ section.settings.image_mobile | img_url: 'master' }}" alt="{{ section.settings.heading }}" loading="eager">
    </div>
    <div class="custom-hero-content-container">
      <div class="custom-hero-content">
        <h1 class="custom-hero-heading">{{ section.settings.heading }}</h1>
        <p class="custom-hero-text">{{ section.settings.text }}</p>
        <div class="custom-hero-buttons">
          {% if section.settings.button_label != blank %}
            <a href="{{ section.settings.button_link }}" class="custom-hero-button">
              {{ section.settings.button_label }}
            </a>
          {% endif %}
          {% if section.settings.button_label_2 != blank %}
            <a href="{{ section.settings.button_link_2 }}" class="custom-hero-button">
              {{ section.settings.button_label_2 }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .custom-hero-section {
    width: 100%;
    position: relative;
    color: #ffffff;
    font-family: Georgia, serif;
  }
  
  .custom-hero-container {
    position: relative;
    width: 100%;
    height: 100vh;
    max-height: 900px;
    overflow: hidden;
  }
  
  .custom-hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  
  .custom-hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    filter: brightness(0.7);
  }
  
  .desktop-only {
    display: block;
  }
  
  .mobile-only {
    display: none;
  }
  
  .custom-hero-content-container {
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    z-index: 2;
    text-align: center;
  }
  
  .custom-hero-content {
    max-width: 800px;
    padding: 20px;
  }
  
  .custom-hero-heading {
    font-size: 5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    line-height: 1.1;
  }
  
  .custom-hero-text {
    font-size: 1.8rem;
    margin-bottom: 2.5rem;
    font-weight: 400;
  }
  
  .custom-hero-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }
  
  .custom-hero-button {
    display: inline-block;
    min-width: 200px;
    padding: 15px 30px;
    border: 2px solid #ffffff;
    color: #ffffff;
    background-color: transparent;
    font-size: 1.2rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
  }
  
  .custom-hero-button:hover {
    background-color: rgba(255, 255, 255, 0.2);
  }
  
  @media screen and (max-width: 990px) {
    .custom-hero-heading {
      font-size: 3.5rem;
    }
    
    .custom-hero-text {
      font-size: 1.5rem;
    }
    
    .custom-hero-button {
      min-width: 180px;
      padding: 12px 25px;
    }
  }
  
  @media screen and (max-width: 768px) {
    .desktop-only {
      display: none;
    }
    
    .mobile-only {
      display: block;
    }
    
    .custom-hero-container {
      height: 80vh;
    }
    
    .custom-hero-heading {
      font-size: 2.5rem;
    }
    
    .custom-hero-text {
      font-size: 1.2rem;
    }
    
    .custom-hero-buttons {
      flex-direction: column;
      gap: 15px;
    }
    
    .custom-hero-button {
      min-width: 160px;
      padding: 10px 20px;
      font-size: 1rem;
    }
  }
</style>

{% schema %}
{
  "name": "Custom Hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Image"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Welcome to Brewster Village Marketplace",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "text",
      "default": "Your Local Spot for Beer, Wine, Deli & More",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Shop Now",
      "label": "First Button Label"
    },
    {
      "type": "url",
      "id": "button_link",
      "default": "/collections/all",
      "label": "First Button Link"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "default": "View Deli Menu",
      "label": "Second Button Label"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "default": "/pages/deli-menu",
      "label": "Second Button Link"
    }
  ],
  "presets": [
    {
      "name": "Custom Hero",
      "settings": {
        "heading": "Welcome to Brewster Village Marketplace",
        "text": "Your Local Spot for Beer, Wine, Deli & More",
        "button_label": "Shop Now",
        "button_link": "/collections/all",
        "button_label_2": "View Deli Menu",
        "button_link_2": "/pages/deli-menu"
      }
    }
  ]
}
{% endschema %} 